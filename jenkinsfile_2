 pipeline {
        agent any
        tools {
          jdk 'JDK11'
          maven 'maven-3.6.1'
        }
        stages {
          stage("SonarQube analysis") {
            steps {
              script {
                def scannerHome = tool 'SonarQubeScaner'
                withSonarQubeEnv('SonarQube') {
                  sh "${scannerHome}/bin/sonar-scanner sonar:sonar -Dsonar.projectKey=SonarQubeTest2"
                }
              }
          }
          stage("Quality Gate") {
            steps {
              timeout(time: 1, unit: 'HOURS') {
                waitForQualityGate abortPipeline: true
              }
            }
          }
          stage("build") {
            agent any
            steps {
              withSonarQubeEnv('SonarQube') {
                sh 'mvn clean install'
              }
            }
          }
        }
      }
